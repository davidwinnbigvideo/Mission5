<form method="post">
    <div class="form-group">
        <label for="hours">Enter Number of Hours:</label>
        <input type="number" class="form-control" id="hours" name="hours" required min="0">
    </div>
    <br />
    <div class="form-group">
        <label for="chargePerHour">Charge Per Hour:</label>
        <input type="text" class="form-control" id="chargePerHour" name="chargePerHour" value=20 readonly>
    </div>
    <br />
    <button type="button" class="btn btn-primary" onclick="calculateTotal()">Calculate Total</button>
    <br />
    <div class="form-group">
        <br />
        <label for="total">Total Cost:</label>
        <input type="text" class="form-control" id="total" name="total" readonly>
    </div>
</form>
<br />

<script>
    function calculateTotal() {
        var hours = parseFloat(document.getElementById('hours').value);
        var chargePerHour = parseFloat(document.getElementById('chargePerHour').value);

        if (!isNaN(hours) && hours >= 0) {
            var total = hours * chargePerHour;
            document.getElementById('total').value = total.toFixed(2);
        } else {
            alert('Please enter a valid positive number for hours.');
        }
    }
</script>